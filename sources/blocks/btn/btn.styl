.btn {
  display inline-block
  line-height 1.25em
  text-align center
  vertical-align top
  touch-action manipulation
  cursor pointer
  background none // Reset unusual Firefox-on-Android default style see https://github.com/necolas/normalize.css/issues/214
  border 0
  text-overflow(ellipsis)
  max-width 100%
  padding 0
  user-select none
  text-decoration none
  transition $transition-base

  &,
  &:active,
  &.active {
    &:focus,
    &.focus {
      outline 0
    }
  }

  &:hover,
  &:focus,
  &.focus {
    //color $btn-default-color
    text-decoration none
  }

  &:active,
  &.active {
    outline 0
    //background-image none
    //box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
  }

  &.disabled,
  &[disabled],
  fieldset[disabled] & {
    disabled()
  }

  &__icon {
    display inline-block
    vertical-align top
  }

  &_1 {
    color $black-1
    font-weight 600
    font-size rem(14)
    letter-spacing rem(0.3)
    padding rem(11) rem(18) rem(12)
    border-radius 100px
    border 1px solid rgba(#e6e6e6, 0.5)
    &:hover,
    &:focus,
    &.focus {
      color $black-1
      border-color rgba($black-1, 0.5)
    }
    &:active,
    &.active {
      //box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    }
  }

  &_2 {
    color $black-1
    font-weight 600
    font-size rem(14)
    letter-spacing rem(0.3)
    padding rem(11) rem(18) rem(12)
    border-radius 100px
    border 1px solid rgba(#e6e6e6, 1)
    &:hover,
    &:focus,
    &.focus {
      color $black-1
      border-color rgba($black-1, 0.5)
    }
    &:active,
    &.active {
      //box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    }
  }

  &_3 {
    display inline-flex
    color #fff9f9
    font-weight 700
    font-size rem(16)
    letter-spacing rem(3)
    text-transform uppercase
    background $red-1
    &:hover,
    &:focus,
    &.focus {
      color #fff9f9
      background darken($red-1, 10%)
    }
    &:active,
    &.active {
    //box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    }

    & {r}__icon {
      flex none
      display flex
      justify-content center
      align-items center
      width rem(66)
      border-right 1px solid #af2525
      &:before {
        content ''
        display block
        border-top rem(6) solid transparent
        border-bottom rem(6) solid transparent
        border-left rem(9) solid white
      }
    }

    & {r}__label {
      display block
      text-overflow(ellipsis)
      padding rem(25) rem(40)
    }
  }

  &_4 {
    color #fff
    font-weight 700
    font-size rem(15)
    letter-spacing rem(0.3)
    text-transform uppercase
    padding rem(15) rem(42) rem(16)
    border-radius rem(100)
    background-image linear-gradient(to top, #e62728, #eb5c1d)
    &:hover,
    &:focus,
    &.focus {
      color #fff
      background-image linear-gradient(to top, #d72728, #d6531d)
    }
    &:active,
    &.active {
    //box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    }
  }
}