.client-item {
  &:empty {
    visibility hidden
  }

  &__img-wrap {
    display flex
    justify-content center
    align-items center
    width rem(196)
    height rem(196)
    max-width 100%
    padding rem(7)
    background-color #ffffff
    border solid 1px rgba(#e6e6e6, 0.5)
    transition $transition-base
    margin 0 auto rem(21)
    &:hover, &:focus {
      border-color $red-1
      & ~ {r}__title {r}__link {
        color $red-1
      }
    }
  }

  &__img {
    display block
    max-width 100%
    max-height 100%
  }

  &__title {
    font-size rem(18)
    font-weight bold
    line-height 1.17em
    margin 0 0 rem(7)
  }

  &__link {
    display block
    color inherit
    text-decoration none
    &:hover, &:focus {
      color $red-1
      text-decoration none
    }
  }

  &__description {
    font-size rem(16)
    line-height 1.31em
  }
}