.footer {
  flex 0 0 auto

  &__top {
    padding rem(55) 0 rem(15)
    background-color #f2f2f2
  }

  &__nav {
    margin 0 0 rem(35)

    dt {
      font-size rem(15)
      font-weight 700
      line-height 1.25em
      letter-spacing rem(0.6)
      color $black-1
      text-transform uppercase
      margin 0 0 rem(25)
      a {
        color inherit
        text-decoration none
        &:hover, &:focus {
          color inherit
          text-decoration none
        }
      }
    }

    dd {
      font-size rem(16)
      line-height 1.25em
      color #666666
      margin 0
    }

    ul {
      padding 0
      margin 0
      li {
        margin-bottom rem(15)
      }
      a {
        color inherit
        text-decoration none
        &:hover, &:focus {
          color $blue-1
          text-decoration none
        }
      }
    }
  }

  @media (min-width $screen-sm-min) {

  }

  @media (min-width $screen-md-min) {

  }

  @media (min-width $screen-lg-min) {
    .container-fluid {
      max-width rem(1750)
    }
  }
}