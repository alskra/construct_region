.form-order-call-2 {
  padding rem(60) 0 rem(22)
  background rgba(#f7f7f7, 0.75)
  .form-row {
    &__agreement {
      margin 0
    }
  }

  &__inner {
    max-width rem(650)
  }

  &__title {
    font-size rem(35)
    font-weight 300
    margin 0 0 rem(10)
  }

  @media (min-width $screen-sm-min) {
    &__title {
      font-size rem(38)
    }
  }
}