.header {
  flex 0 0 auto
  width 100%
  padding rem(10) 0
  background white
  border-bottom 1px solid #e6e6e6
  position fixed
  top 0
  left 0
  z-index $zindex-navbar-fixed

  &__toggle-menu {
    float left
    color #1C1C1B
    font-size rem(20)
    line-height 1em
    width rem(55)
    height rem(55)
    padding 0
    border 0
    background none
    margin rem(-10) 0 rem(-10) (- $grid-gutter-width/2)

    &.glyphicon-cancel {
      font-size rem(18)
    }
  }

  &__logo {
    display block
    overflow hidden
    width rem(132)
    height rem(35)
    max-width 100%
    float right
    &:before {
      content url('logo.svg')
      display block
      width 100%
    }
  }

  &__panel {
    display none
    overflow-y auto
    width 100%
    height uq('calc(100vh - ' + rem(55) + ')')
    background white
    padding 0 ($grid-gutter-width/2) rem(20)
    position absolute
    top 100%
    left 0
    margin 1px 0 0
  }

  &__panel-bottom {
    text-align center
    margin rem(30) 0 0
  }

  &__tel {
    font-size rem(18)
    font-weight bold
    line-height 1.25em
    letter-spacing rem(0.9)
    color $black-1
    text-decoration none
    &:hover, &:focus {
      color $black-1
      text-decoration none
    }
  }

  &__order-call {
    margin rem(15) auto 0
  }

  @media (min-width $screen-sm-min) {
    &__logo {
    }

    &__tel {
      vertical-align middle
    }

    &__order-call.btn {
      vertical-align middle
      margin 0 0 0 rem(30)
    }
  }

  @media (min-width $screen-md-min) {
    padding rem(21) 0
    position relative

    &__top {
      display flex
      align-items flex-start
    }

    &__logo {
      float none
      flex none
      margin rem(4) rem(25) rem(3) 0
    }

    &__panel {
      display flex !important
      align-items flex-start
      overflow-y visible
      position static
      width auto
      height auto
      background none
      padding 0
      margin 0 0 0 auto
    }

    &__panel-bottom {
      display flex
      align-items flex-start
      flex none
      margin 0 0 0 rem(30)
    }

    &__tel {
      flex none
      margin auto 0
    }

    &__order-call.btn {
      flex none
      margin 0 0 0 rem(24)
    }
  }

  @media (min-width $screen-lg-min) {
    .container-fluid {
      max-width rem(1750)
    }
  }

  @media (min-width em-root(1920px)) {
    &__panel-bottom {
      margin 0 0 0 rem(70)
    }
  }
}