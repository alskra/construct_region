.history-item {
  &__header {
    padding rem(21) 0
  }

  &__year {
    font-size rem(80)
    font-weight 800
    line-height 0.88
    text-align center
    color #ff9b1a
    white-space nowrap
    margin 0
  }

  &__content {
    padding rem(20) 0 rem(50)
  }

  &__who {
    display flex
    align-items flex-start
    margin 0 0 rem(49)
  }

  &__who-img {
    overflow hidden
    flex none
    width rem(85)
    height rem(85)
    border-radius 50%
    margin 0 rem(20) 0 0
    img {
      display block
      width 100%
      height 100%
      border-radius inherit
    }
  }

  &__who-info {
    overflow hidden
    flex 1 1 auto
  }

  &__who-title {
    color inherit
    font-size rem(18)
    font-weight bold
    line-height 1.56
    margin rem(15) 0 0
  }

  &__who-descr {
    font-size rem(14)
    line-height 2
    margin 0
  }

  &__event-title {
    font-size rem(25)
    font-weight 600
    line-height 1.4
    margin 0 0 rem(21)
  }

  &__event-description {
    p {
      &:last-child {
        margin 0
      }
    }
  }

  @media (min-width $screen-md-min) {
    & {r}__content {
      padding rem(20) 0 rem(98)
    }
    &:nth-child(odd) {
      & {r}__content {
        width 50%
        padding-right rem(96)
        border-right 1px solid #e6e6e6
        position relative
        &:before {
          content ''
          width rem(40)
          height rem(1)
          background-color #e6e6e6
          position absolute
          top rem(49)
          right 0
        }
      }
    }
    &:nth-child(even) {
      & {r}__content {
        width 50%
        padding-left rem(96)
        border-left 1px solid #e6e6e6
        position relative
        margin 0 0 0 auto
        &:before {
          content ''
          width rem(40)
          height rem(1)
          background-color #e6e6e6
          position absolute
          top rem(49)
          left 0
        }
      }
    }
  }
}