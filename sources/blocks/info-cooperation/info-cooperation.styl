.info-cooperation {
  overflow hidden

  &__title {
    font-family 'Raleway', sans-serif
    font-size rem(24)
    font-weight 500
    line-height 1.29
    letter-spacing rem(0.6)
    text-align center
    margin 0 0 (64/38)em
  }

  &__list {
    display flex
    flex-wrap wrap
    overflow hidden
    padding rem(20) 0
    border-top 1px solid #e3e3e3
    border-bottom 1px solid #e3e3e3
    margin-left -1px
  }

  &__item {
    flex none
    width 100%
    padding rem(10) rem(20) rem(23)
    border-left 1px solid #e3e3e3
  }

  &__img-wrap {
    display flex
    justify-content center
    align-items center
    width rem(80)
    height rem(80)
    margin 0 auto
  }

  &__img {
    display block
    max-width 100%
    max-height 100%
  }

  &__caption {
    font-size rem(16)
    line-height 1.56
    text-align center
    color #4e4f54
    margin rem(10) 0 0
  }

  @media (min-width em-root(480px)) {
    &__item {
      width percentage(0.5)
    }
  }

  @media (min-width $screen-md-min) {
    &__item {
      width percentage(4/12)
    }

    &__title {
      font-size rem(38)
    }

    &__img-wrap {
      width rem(113)
      height rem(113)
    }

    &__caption {
      font-size rem(18)
      margin rem(25) 0 0
    }
  }

  @media (min-width $screen-lg-min) {
    &__item {
      width percentage(2/12)
    }
  }
}