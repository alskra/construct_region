.partners-list {
  &__item {
    display flex
    align-items flex-start
    color inherit
    text-decoration none
    page-break-inside avoid
    margin 0 0 rem(7)
    &:hover, &:focus {
      color inherit
      text-decoration none
      a& {r}__item-title {
        color $red-1
      }
    }
  }

  &__item-img {
    flex none
    width rem(49)
    height rem(49)
    margin 0 rem(18) 0 0
  }

  &__item-title {
    flex 1 1 auto
    font-size rem(18)
    font-weight 600
    line-height 1.17em
    text-align left
    color $black-1
    transition inherit
    margin rem(14) 0 0
  }

  @media (min-width $screen-sm-min) {
    &__columns {
      column-count 2
      column-gap rem(30)
    }
  }
}