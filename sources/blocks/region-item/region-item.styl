.region-item {
  flex none
  font-size rem(14)
  line-height 1.5em
  width 100%
  padding rem(45) rem(49) rem(35)
  border-right rem(1) solid #e6e6e6
  //position relative
  //z-index 2
  &:empty {
    padding 0
  }

  &__mail {
    color inherit
    text-decoration none
    border-bottom 1px dotted #d1d1d1
    &:hover, &:focus {
      color $red-1
      text-decoration none
      border-bottom-color $red-1
    }
  }

  &__header {
    margin 0 0 rem(28)
  }

  &__title {
    font-size rem(18)
    font-weight bold
    line-height 1.56em
    text-align left
    margin 0
  }

  @media (min-width em-root(640)) {
    width percentage(1/2)
  }

  @media (min-width $screen-md-min) {
    width percentage(1/3)
  }

  @media (min-width $screen-lg-min) {
    width percentage(1/4)
  }
}