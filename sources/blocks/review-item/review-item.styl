.review-item {
  text-align left

  &__img-wrap {
    display flex
    justify-content center
    align-items center
    width rem(196)
    height rem(196)
    max-width 100%
    padding rem(7)
    background-color #ffffff
    border solid 1px rgba(#e6e6e6, 0.5)
    transition $transition-base
    margin 0 auto rem(35)
    &:hover, &:focus {
      border-color $red-1
      & ~ {r}__content {r}__title {r}__link {
        color $red-1
      }
    }
  }

  &__img {
    display block
    max-width 100%
    max-height 100%
  }

  &__header {
    margin 0 0 rem(14)
  }

  &__title {
    font-size rem(25)
    line-height 1.12em
    margin 0 0 rem(7)
  }

  &__link {
    display block
    color inherit
    text-decoration none
    &:hover, &:focus {
      color $red-1
      text-decoration none
    }
  }

  &__info {
    color #b8b9bb
  }

  &__text {
    margin 0 0 rem(28)
    p {
      &:last-child {
        margin 0
      }
    }
  }

  &__mail {
    display inline-block
    vertical-align top
    font-size rem(18)
    font-weight bold
    line-height 1.56em
    color $black-1
    text-decoration none
    padding rem(7) 0 0 rem(45)
    background inline-svg('pdf.svg') no-repeat 0 0
    background-size rem(31) auto
    &:hover, &:focus {
      color $red-1
      text-decoration none
    }
  }

  &__author {
    color #000000
    font-size rem(18)
    line-height 1.56em
    margin 0
  }

  &__footer-col-1 {
    margin 0 0 rem(21)
  }

  @media (min-width $screen-sm-min) {
    display flex
    align-items flex-start
    max-width rem(1160)

    &__img-wrap {
      flex none
      margin 0 rem(50) 0 0
    }

    &__content {
      overflow hidden
      flex 1 1 auto
    }

    &__header {
      margin rem(35) 0 0
    }

    &__text {
      max-width rem(800)
    }

    &__footer {
      display flex
      align-items flex-start
    }

    &__footer-col-1 {
      flex none
      width 50%
      padding-right rem(15)
      margin 0
    }

    &__footer-col-2 {
      flex none
      width 50%
      text-align right
      padding-left rem(15)
    }

    &__author {
      margin-top rem(7)
    }
  }
}