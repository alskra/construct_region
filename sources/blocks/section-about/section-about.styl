.section-about {
  padding rem(40) 0 0

  &__title {
    font-size rem(28)
    font-weight 300
    line-height 1.43
    letter-spacing rem(-0.2)
    text-align center
    margin 0 0 (85/44)em
  }

  @media (min-width $screen-md-min) {
    padding rem(85) 0 0

    &__title {
      font-size rem(44)
    }
  }
}