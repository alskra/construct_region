.section-clients {
  padding rem(40) 0
  background-color #fff

  &__title {
    font-family 'Raleway', sans-serif
    font-size rem(28)
    font-weight 500
    line-height 1.29
    letter-spacing rem(0.6)
    text-align center
    margin 0 0 (50/38)em
  }

  &_gray {
    background rgba(#f2f2f2, 0.6)
  }

  @media (min-width $screen-md-min) {
    padding rem(85) 0

    &__title {
      font-size rem(38)
    }
  }
}