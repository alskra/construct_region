.section-service-2 {
  padding rem(40) 0 rem(20)
  background-color rgba(#f2f2f2, 0.7)

  &__title {
    font-family 'Raleway', sans-serif
    font-size rem(28)
    font-weight 500
    line-height 1.29
    letter-spacing rem(0.6)
    text-align center
    margin 0 0 (80/38)em
  }

  &__container {
    overflow hidden
    max-width rem(1380)
    padding 0 rem(15)
    margin 0 auto
  }

  &__list {
    list-style none
    display flex
    flex-wrap wrap
    padding 0
    margin 0 rem(-15)
  }

  &__item {
    flex none
    font-size rem(18)
    line-height 1.56
    text-align left
    color $black-1
    width percentage(1)
    padding 0 rem(15)
    margin 0 0 rem(45)
    &:before {
      content ''
      display block
      width rem(14)
      height rem(14)
      margin 0 0 rem(19)
      background-color $red-1
    }
  }

  @media (min-width $screen-sm-min) {
    &__item {
      width percentage(0.5)
    }
  }

  @media (min-width $screen-md-min) {
    padding rem(85) 0 rem(65)

    &__title {
      font-size rem(38)
    }

    &__item {
      width percentage(1/3)
    }
  }

  @media (min-width $screen-lg-min) {
    &__container {
      padding 0 rem(40)
    }

    &__list {
      margin 0 rem(-40)
    }

    &__item {
      padding 0 rem(40)
    }
  }
}