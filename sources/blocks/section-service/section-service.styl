.section-service {
  color white
  padding rem(40) 0 rem(70)
  background $red-1

  &__title {
    font-size rem(28)
    font-weight 500
    line-height 1.29
    letter-spacing rem(0.6)
    text-align center
    color #ffffff
    margin 0 0 (65/38)em
  }

  &__list {
    display flex
    flex-wrap wrap
    justify-content center
    max-width rem(1920)
    margin 0 auto
  }

  &__item {
    flex none
    text-align center
    width 50%
    max-width rem(246)
    &:empty {
      visibility hidden
    }
  }

  &__item-link {
    display block
    overflow hidden
    padding-top percentage(581/356)
    position relative
    background #333
    &, &:hover, &:focus {
      color #ffffff
      text-decoration none
    }
    &:hover, &:focus {
      & {r}__item-img {
        opacity 0.7
      }
    }
  }

  &__item-img {
    transition $transition-base
    position absolute
    top 0
    left 0
  }

  &__item-over {
    padding percentage(56/356) rem(15)
    position absolute
    right 0
    bottom 0
    left 0
    z-index 1
  }

  &__item-title {
    overflow hidden
    font-size rem(18)
    font-weight 600
    line-height 1.17em
    text-align inherit
    color #ffffff
    max-height 1.17em*3
    line-clamp(3)
    margin 0 0 (14/24)em
  }

  &__item-label {
    font-size rem(14)
    font-weight 600
    line-height 2em
    letter-spacing rem(1.6)
    color rgba(#ffffff, 0.4)
    text-transform uppercase
  }

  @media (min-width $screen-sm-min) {
    &__list {
      padding 0 rem(15)
    }

    &__item {
      width percentage(1/3)
    }
  }

  @media (min-width $screen-md-min) {
    padding rem(95) 0 rem(125)

    &__title {
      font-size rem(38)
    }

    &__item {
      width percentage(1/5)
      max-width rem(356)
    }

    &__item-link {

    }

    &__item-over {

    }
  }

  @media (min-width $screen-lg-min) {
    &__list {
      padding 0 rem(70)
    }

    &__item-title {
      font-size rem(24)
    }
  }
}