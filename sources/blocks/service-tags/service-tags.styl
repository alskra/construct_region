.service-tags {
  margin rem(60) 0

  &__title {
    font-size rem(25)
    font-weight 600
    line-height 1.25
    color $black-1
    margin 0 0 rem(30)
  }

  &__list {
    list-style none
    padding 0
    display flex
    flex-wrap wrap
    margin 0 rem(-14) rem(-14) 0
  }

  &__item {
    font-size rem(18)
    line-height 1.25em
    text-align left
    color #4e4f54
    padding rem(14) rem(18)
    border 3px solid rgba(#e6e6e6, 0.4)
    margin 0 rem(14) rem(14) 0
  }
}