.stations {
  display flex
  flex-wrap wrap
  margin 0 rem(-14) rem(56) 0

  &__item {
    flex 0 1 rem(300)
    font-size rem(14)
    line-height (28/18)
    max-width uq('calc(100% - ' + rem(14) + ')')
    padding rem(20) rem(20) rem(20) rem(60)
    border-radius rem(3)
    background-color #ffffff
    border solid 1px #eaeaea
    cursor pointer
    transition $transition-base
    position relative
    margin 0 rem(14) rem(14) 0
    &:hover:not(&_opened) {
      border-color #ff0000
      & {r}__title {
        color #ff0000
        border-color #ff0000
      }
    }

    &_opened {
      z-index $zindex-dropdown
      & {r}__title {
        color #ff0000
        border-color transparent
      }
      & > *:not({r}__popup) {
        z-index 2
      }
    }
  }

  &__icon {
    color rgb(238, 52, 34)
    font-size rem(18)
    line-height 1em
    position absolute
    top rem(23)
    left rem(20)
  }

  &__title {
    display inline-block
    font-size rem(18)
    line-height 1.3
    font-weight bold
    color $black-1
    text-overflow(ellipsis)
    max-width 100%
    border-bottom 1px dotted #d1d1d1
    transition inherit
    position relative
    margin 0
  }

  &__info {
    text-overflow(ellipsis)
    position relative
  }

  &__popup {
    display none
    font-size rem(16)
    line-height (28/16)
    border-radius rem(3)
    background-color #ffffff
    box-shadow 0 0 rem(24) 0 rgba(179, 181, 183, 0.5)
    position absolute
    top -1px
    left -1px
    width rem(550)
    max-width uq('calc(100vw - ' + $grid-gutter-width + ')')
    padding rem(90) rem(35) rem(40) rem(60)
    cursor auto
    p {
      &:last-child, &:last-of-type {
        margin 0
      }
    }

    &-scroll {
      overflow-y auto
      max-height uq('calc(100vh - ' + rem(200) + ')')
    }
  }

  &__btn-close {
    color #666666
    font-size rem(16)
    line-height 1em
    transition $transition-base
    position absolute
    top rem(16)
    right rem(16)
    z-index 10
    &:hover, &:focus {
      color $red-1
    }
  }
}