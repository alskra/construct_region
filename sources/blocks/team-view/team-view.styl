.team-view {
  display none
  overflow hidden
  flex none
  width rem(410)
  max-width 100%
  padding rem(90) rem(60) rem(60)
  text-align left
  transition margin-left 0.3s ease-in-out
  position relative
  margin-left auto
  p {
    &:last-child {
      margin 0
    }
  }

  &__btn-close {
    color #666666
    font-size rem(16)
    line-height 1em
    transition $transition-base
    position absolute
    top rem(26)
    right rem(29)
    z-index 5
    &:hover, &:focus {
      color $red-1
    }
  }

  &__header {
    margin 0 0 rem(35)
  }

  &__img-wrap {
    max-width rem(211)
    border-radius 50%
    margin 0 auto rem(41)
  }

  &__img-resp {
    color white
    padding-top 100%
    //background #30303a
    border-radius inherit
    position relative
    &:empty {
      background inline-svg('logo-white.svg') no-repeat 50% 50%/80% auto #30303a
    }
  }

  &__img {
    border-radius inherit
    position absolute
    top 0
    left 0
  }

  &__title {
    font-size rem(18)
    font-weight bold
    line-height 1.56em
    text-overflow(ellipsis)
    transition $transition-base
    margin 0
  }

  &__position {
    color #b8b9bb
    font-size rem(14)
    line-height 2em
  }
}