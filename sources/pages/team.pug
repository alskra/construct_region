include ../blocks/doctype/doctype

block variables
  -
    var pageTitle = pages.team.title, pageUrls = [pages.about.url, pages.team.url];

include ../blocks/header/header
include ../blocks/content/content
include ../blocks/footer/footer

+doctype(pageTitle)
  .-wrapper
    +header()
    +content()
      section.-section._team
        header.__header
          .-container-fluid
            h1.-section.__title Наша команда
            p.-section.__header-lead #[strong #[em 76]]&nbsp;сотрудника
        .-teambox
          .-team-list
            .-container-fluid
              .-row
                .-col-xs-12.col-sm-6.col-md-3
                  article.-team-item
                    +a().__inner(title='Евгений Бажанов')
                      .__img-wrap
                        .__img-resp
                          img.__img(
                          src=`${paths.imgContent}/team/eb.jpg`
                          srcset=`${paths.imgContent}/team/eb.jpg 1x, ${paths.imgContent}/team/eb@2x.jpg 2x, ${paths.imgContent}/team/eb@3x.jpg 3x`
                          data-object-fit='cover' onload='objectFit(this)'
                          alt=''
                          )
                      h2.__title Евгений Бажанов
                      p.__position Менеджер
                    .__content
                      p.
                        Дата последнего изменения — 01 августа 2017
                      p.
                        Настоящая политика конфиденци-альности персональных данных (Далее - Политика) действует
                        в отношении всей информации, которую Администрация Интернет-сайта (далее - Сайт), расположен-ного на домене - (#[+a('/') ссылка на сайт]), может получить от Пользователя во время использования Сайта, а также в ходе исполнения Администрацией сайта любых соглашений и договоров с Пользователем.
                .-col-xs-12.col-sm-6.col-md-3
                  article.-team-item
                    +a().__inner(title='Борис Козловский')
                      .__img-wrap
                        .__img-resp
                          img.__img(
                          src=`${paths.imgContent}/team/bk.jpg`
